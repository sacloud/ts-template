{
  "type": "module",
  "name": "@sacloud/ts-template",
  "version": "0.1.0",
  "description": "TypeScript template for sacloud repositories",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sacloud/ts-template.git"
  },
  "keywords": [
    "typescript",
    "sacloud"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "ts-template authors",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "clean": "del-cli dist",
    "test": "vitest run",
    "test:ci": "run-p test:ci:*",
    "test:ci:vitest": "vitest",
    "lint:ci": "run-p lint:ci:*",
    "lint:ci:biome": "biome lint .",
    "lint": "biome lint --write .",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^24.3.0",
    "del-cli": "^6.0.0",
    "lefthook": "^1.12.3",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  }
}
